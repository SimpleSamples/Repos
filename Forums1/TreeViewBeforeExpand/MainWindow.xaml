<Window x:Class="TreeViewBeforeExpand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeViewBeforeExpand"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="ButtonExpand" Content="Button" Width="75" Margin="10" Click="ButtonExpand_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TreeView Grid.Row="1" x:Name="TV1" >
        </TreeView >
    </Grid>
</Window>
