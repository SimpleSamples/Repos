<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <DockPanel>
        <Menu Height="25" DockPanel.Dock="Top">
            <MenuItem x:Name="MenuItemExit" Header="E_xit" Click="MenuItemExit_Click"/>
            <MenuItem x:Name="MenuItemCopy" Header="Copy" Click="MenuItemCopy_Click"/>
        </Menu>
        <StatusBar Height="25" Margin="2,2,0,0" Name="statusBar1" DockPanel.Dock="Bottom">
            <StatusBarItem x:Name="Message">Status Bar</StatusBarItem>
        </StatusBar>
        <TextBlock x:Name="InfoBox" />
        <Grid/>
    </DockPanel>
</Window>
